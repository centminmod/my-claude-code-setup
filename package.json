{
  "name": "my-claude-code-setup-docs-ja",
  "private": true,
  "scripts": {
    "fmt": "prettier --write \"**/*.{md,mdx}\"",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\"",
    "lint:ja": "textlint -f pretty-error \"docs/ja/**/*.md\"",
    "docs:check": "npm run fmt && npm run lint:md && npm run lint:ja",
    "docs:fix": "npm run fmt && textlint --fix \"docs/ja/**/*.md\""
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.15.0",
    "prettier": "^3.3.3",
    "remark-cli": "^12.0.0",
    "remark-gfm": "^4.0.0",
    "remark-slug": "^8.0.0",
    "remark-toc": "^9.0.0",
    "textlint": "^13.4.1",
    "textlint-rule-preset-ja-technical-writing": "^12.0.1",
    "textlint-rule-preset-jtf-style": "^2.3.14",
    "textlint-rule-prh": "^5.4.0"
  }
}